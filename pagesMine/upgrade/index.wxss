/* pages/mine/upgrade/index.wxss */
page{
  background: #FFF;
  background-image: url("data:image/gif;base64,")
}

.upgrade-wrap {
  padding: 0 50rpx 150rpx 50rpx;
}

.timeline {
  display: inline-block;
  position: relative;
  width: 100%;
  padding: 20rpx 0 40rpx;
}

.timeline:before {
  position: absolute;
  display: inline-block;
  content: '';
  width: 6rpx;
  left: 50%;
  margin-left: -3rpx;
  top: -20rpx;
  bottom: -20rpx;
  background-color: #d8d8d8;
  background-position: center;
  opacity: 0.5;
  z-index: -1;
}

.timeline-circle {
  position: relative;
  display: inline-block;
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  left: 50%;
  margin-left: -9rpx;
}

.upgrade-card {
  margin-top: 40rpx;
}

.upgrade-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.version-time {
  margin-top: 8rpx;
  font-size: 26rpx;
  line-height: 36rpx !important;
  color: #a6a6a6;
  margin-bottom: 24rpx !important;
}

.version-badge {
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 22rpx;
  font-size: 32rpx;
  font-family: "Helvetica Neue";
  line-height: 40rpx;
  color: #fff;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#7db9e8', endColorstr='#2989d8', GradientType=1);
}

.upgrade-body {
  padding: 32rpx 24rpx;
  margin: 0 !important;
  background-color: rgba(255, 255, 255, 0.9);
  opacity: 0.9;
  font-size: 26rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}