.t-cell {
  position: relative;
  padding: 20rpx;
  display: flex;
  background: #fff;
  align-items: center;
  line-height: 1.4;
  font-size: 28rpx;
  overflow: hidden;
}

.t-cell-last::after {
  display: none;
}

.t-border {
  border-bottom: 1rpx solid #f0f0f0 !important;
}

.t-required {
  display: flex;
  align-items: center;
  color: red;
  padding-top: 10rpx;
  width: 25rpx;
}

.t-cell-icon {
  margin-right: 10rpx;
}

.t-cell-icon:empty {
  display: none;
}

.t-cell-bd {
  flex: 1;
}

.fontWeight {
  font-weight: 600;
}

.t-cell-text {
  line-height: 48rpx;
  font-size: 28rpx;
}

.t-cell-desc {
  line-height: 1.2;
  font-size: 24rpx;
  color: #80848f;
}

.t-cell-ft {
  position: relative;
  text-align: right;
  color: #495060;
}

.t-cell-access .t-cell-ft {
  padding-right: 26rpx;
}

.t-cell-access .t-cell-ft::after {
  content: " ";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 50%;
  right: 4rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #dddee1;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.t-input {
  padding: 10rpx 0;
  color: #495060;
}

.t-input-wrapped {
  margin: 20rpx 30rpx;
  background-color: #fff;
}

.t-input-wrapped::after {
  left: 0;
  border-width: 2rpx;
  border-radius: 8rpx;
}

.t-input-error {
  color: #ed3f14;
}

.t-input-title {
  color: #495060;
  min-width: 130rpx;
  padding-right: 20rpx;
}

.t-input-input {
  flex: 1;
  line-height: 1.6;
  padding: 13rpx 0;
  min-height: 44rpx;
  height: auto;
  font-size: 28rpx;
  z-index: 0;
}

.t-input-placeholder {
  font-size: 28rpx;
}

.t-input-input-right {
  text-align: right;
}

.t-input.t-input-wrapped::after {
  display: block;
}

.t-input-wrapped.t-input-error::after {
  border-color: #ed3f14;
}

.t-icon-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.t-icon {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  height: 50rpx;
  width: 50rpx;
  margin-right: -5rpx;
}

.captcha-code {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  height: 60rpx;
  width: 180rpx;
}
