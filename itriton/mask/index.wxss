.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  background: #000;
  overflow: hidden;
}

.modal-box {
  display: flex;
  justify-content: center;
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1001;
  margin: 0;
  border-radius: 3px;
}