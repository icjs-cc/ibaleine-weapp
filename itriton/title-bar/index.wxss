/* component/title-bar/index.wxss */
.bar{
  display: flex;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
}
.title-bar{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  max-width: 100%;
  width: 100%;
  color: #666;
}

.icon-circle{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.icon-line{
  width: 8rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.title{
  display: flex;
  align-items: center;
}

.extra{
  font-size: 28rpx;
  color: #666;
}