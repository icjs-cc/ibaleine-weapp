/* component/filter-search/index.wxss */
.filter-search {
  position: relative;
  width: calc(100% - 40rpx);
  height: 60rpx;
  padding: 20rpx;
  background: #fff;
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f3f3f3;
  z-index: 999;
}

.search-input{
  display: flex;
  align-items: center;
  width: 300rpx;
  padding: 5rpx 20rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background: #f3f3f3;
  justify-content: space-between;
}

.filter-search input {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 4px;
  margin-left: 10rpx;
  font-size: 28rpx;
  background: #f3f3f3;
}

.icon-image{
  display: flex;
  align-items: center;
}

.icon-image>image {
  width: 35rpx;
  height: 35rpx;
}

.icon-search-clear{
  right: 10rpx;
  top: 16rpx;
  z-index: 999;
}

.filter-search-fixed {
  height:100rpx;
}
