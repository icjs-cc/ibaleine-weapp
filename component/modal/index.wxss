/* biz-component/modal/index.wxss */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10000;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.modal-box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 10001;
  background: #fafafa;
  margin: 0 12% 0 12%;
  border-radius: 3px;
}

.title {
  padding: 32rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: gazure;
}

.content {
  overflow-y: scroll;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  min-height: 80rpx;
  font-size: 30rpx;
  color: #999999;
}

.btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
  padding-bottom: 50rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}

.cancel {
  width: 100%;
  padding: 10rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.confirm {
  width: 100%;
  padding: 10rpx;
  background-color: white;
  border-left: 1rpx solid #f0f0f0;
  text-align: center;
  border-radius: 10rpx;
}

.btn-disabled{
  opacity:0.5
}


.btn-loading-inner {
  display: inline-block;
  margin-right: 20rpx;
  vertical-align: middle;
  width: 20rpx;
  height: 20rpx;
  background: 0 0;
  border-radius: 50%;
  border: 5rpx solid #fff;
  border-color: #fff #fff #fff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}
