/* component/action-bar/index.wxss */

.iw-action-bar {
  left: 0;
  right: 0;
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  background-color: #fff;
}


.iw-action-bar-mini-btn {
  color: #7d7e80;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 10px;
  min-width: 15%;
  line-height: 1;
  text-align: center;
  background-color: #fff;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.iw-icon {
  position: relative;
  display: inline-block;
  font: normal normal normal 14px/1 "vant-icon";
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
}

.iw-info {
  position: absolute;
  right: 0;
  top: -8px;
  color: #fff;
  font-size: 12px;
  font-weight: 500;
  font-family: PingFang SC, Helvetica Neue, Arial, sans-serif;
  text-align: center;
  box-sizing: border-box;
  padding: 0 3px;
  min-width: 16px;
  line-height: 14px;
  border: 1px solid #fff;
  border-radius: 16px;
  background-color: #f44;
  -webkit-transform: translateX(50%);
  transform: translateX(50%);
  -webkit-transform-origin: 100%;
  transform-origin: 100%;
}

.iw-action-bar-mini-btn-icon {
  font-size: 20px;
  margin: 0 auto 5px;
}

.iw-icon image{
  width: 40rpx!important;
  height: 40rpx!important;
}

.iw-button {
  display: inline-block;
  position: relative;
  padding: 0;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  text-align: center;
  box-sizing: border-box;
  -webkit-appearance: none;
  -webkit-text-size-adjust: 100%;
}

.iw-action-bar-big-btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 0;
}

.iw-action-bar-height {
  line-height: 100rpx;
  height: 100rpx;
}