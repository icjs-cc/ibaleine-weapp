/* component/notice/index.wxss */

.notice-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}

.notice-wrap-content {
  display: flex;
  align-items: center;
  border-left: 1rpx solid #e9e9e9;
  flex: 1;
  margin-left: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.notice-wrap-text {
  margin-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.notice-wrap-text .notice-wrap-text-cell {
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}