/* component/check-box/index.wxss */
.check-box-wrap{
  display: flex;
  position: relative;
}

.check-box {
  margin: 10rpx;
  padding: 10rpx 0;
  color: #4e4e4e;
  text-align: center;
  border: 1rpx solid #e3e3e3;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.active {
  position: absolute;
  border-left: 40rpx solid transparent;
  right: 10rpx;
  bottom: 10rpx;
}

.check-box-active::after {
  content: "";
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 20rpx 20rpx;
  background-position: center center;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  z-index: 999;
  bottom: 10rpx;
  right: 10rpx;
}