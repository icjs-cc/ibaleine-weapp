.iw-tabs {
  display: flex;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  position: relative;
  justify-content: space-around;
  align-items: center;
  -webkit-box-align: center;
  background: #fff;
}

.iw-tabs::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
}

.iw-tabs-scroll {
  display: block;
  overflow-x: auto;
  white-space: nowrap;
}

.iw-tabs-fixed {
  position: fixed;
  top: 0;
  z-index: 2;
}

.iw-tabs-fixed-height {
  height: 70rpx;
  line-height: 70rpx;
}

.iw-tabs-vertical {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.iw-tabs-scroll-vertical {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 200rpx;
  text-align: center;
  font-size: 32rpx;
  background: #eee;
}

.iw-tabs-scroll-vertical::before {
  content: "";
  position: absolute;
  background: #eee;
  right: 0;
  top: 0;
  height: 100%;
}

.iw-tabs-scroll-vertical-content {
  margin-left: 210rpx;
  height: 100%;
  overflow: hidden;
  width: auto;
  background: #fff;
}
