/* biz-component/popup/index.wxss */

.wrapAnimate {
  animation: wrapAnimate 0.5s ease-in-out forwards;
}

@keyframes wrapAnimate {
  0% {
  }

  100% {
    background: rgba(0, 0, 0, 0.35);
  }
}

.wrapAnimateOut {
  animation: wrapAnimateOut 0.4s ease-in-out forwards;
}

@keyframes wrapAnimateOut {
  0% {
    background: rgba(0, 0, 0, 0.35);
  }

  100% {
    background: rgba(0, 0, 0, 0);
  }
}

.frameAnimate {
  animation: frameAnimate 0.5s ease forwards;
}

@keyframes frameAnimate {
  0% {
  }

  100% {
    opacity: 1;
    top: 0vh;
  }
}

.frameAnimateOut {
  animation: frameAnimateOut 0.4s ease forwards;
}

@keyframes frameAnimateOut {
  0% {
    opacity: 1;
    top: 0vh;
  }

  100% {
    opacity: 0;
    top: 100vh;
  }
}

.popup {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.popup-wrapper {
  position: fixed;
  height: 100vh;
  width: 100vw;
  top: 50vh;
  z-index: 9999;
}

.popup-content {
  background: #fff;
  position: absolute;
  bottom: 0;
  width: 100vw;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  z-index: 99999;
}

.popup-title-wrap {
  justify-content: space-between;
  font-size: 32rpx;
  padding: 20rpx;
  color: #4a4a4a;
}

.popup-flex {
  display: flex;
  align-items: center;
}

.popup-close{
  font-size: 50rpx;
  line-height: 40rpx;
  height: 40rpx;
  color: #4a4a4a;
}